<h2>Welcome to {{title}}</h2>
<a class="button" href="manageSpace?space={{spaceID}}">Manage Space</a>
<script>
    $(function() {
        $('.reply').hide();
    });
</script>
<h3>Threads in this space</h3>
{{#each this.threads}}
<div class="container-fluid" id="Thread-{{this.thread_ID}}">
    <p>Title: {{this.thread_Name}}</p>
    <p style="background-color:grey">{{this.thread_PostContent}}</p>
    {{> threadNotifyWidget}}
    <br>
    <div class="reply" id="reply-{{this.thread_ID}}">
        <form method="POST" action="submitPost">
            <input type="hidden" name="spaceId" value="{{spaceID}}"/>
            <input type="hidden" name="parentId" value="{{this.thread_ID}}"/>
            <div class="form-group">
                <textarea name="content" class="form-control">

                </textarea>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit Reply">
        </form>
        <br>
    </div>
    <button class=" btn btn-default" onclick="$('#reply-{{this.thread_ID}}').toggle()">Reply</button>

</div><br>
{{/each}}